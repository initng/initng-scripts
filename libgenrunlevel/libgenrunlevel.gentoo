#!/bin/bash

copy_gentoo_services() {
	for s in /etc/runlevels/"${2}"/*; do
		[ -f "/etc/initng/${1}/${s}" ] &&
			echo "${1}/${s}"
	done
}

get_runlevels() {
	{
		ls --color=none /etc/runlevels | sed -e 's@^@runlevel/@'
		echo runlevel/system
	} | grep -v boot.runlevel | sort -u
}

gen_runlevel() {
	if [ "${1}" = "system.virtual" ]; then
		add_service "${1}" system/consolefont
		copy_gentoo_services system boot
	fi
}
